generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlayerModel {
  id            String  @id @default(uuid())
  playerName    String
  mobileNumber  String
  position      String
  number        String
  goals         Int     @default(0)
  playedMatches Int     @default(0)
  avatar        String?
  coverImage    String?
}
